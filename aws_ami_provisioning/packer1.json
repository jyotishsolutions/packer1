{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
 "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-ed82e39e",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer1ami"
  }],
  "provisioners": [
    {
        "type": "shell",
        "inline": [
           "sleep 30",
           "sudo /usr/bin/apt-get update",
           "sudo /usr/bin/apt-get -y install ansible"
         ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "./provisioning.yml", 
      "role_paths": [
                "./roles/apache",
				"./roles/cloudwatchlogs",
       ]
    }
  ]
}
